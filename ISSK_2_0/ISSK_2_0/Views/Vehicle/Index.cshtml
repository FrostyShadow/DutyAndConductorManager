@model IEnumerable<ISSK_2_0.Models.VehicleListView>

@{
    ViewBag.Title = "Lista pojazdów";
}

<div class="jumbotron">
    @if (ViewBag.State == "InvalidId")
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            Nieprawidłowe Id pojazdu!
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <h2>@ViewBag.Title</h2>
    <p>
        <a href="@Url.Action("Create", "Vehicle")" class="btn btn-success">
            <i class="fa fa-plus"></i>
            <span>
                Nowy pojazd
            </span>
        </a>
    </p>
    @if (Model != null)
    {
        <table class="table table-striped table-responsive-lg">
            <thead class="thead-dark">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(m => m.SideNo)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(m => m.Manufacturer)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(m => m.Model)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(m => m.VehicleTypeName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(m => m.IsCoupleableDescriptor)
                </th>

                <th scope="col"></th>

            </tr>
            </thead>

            <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td scope="col">
                            @Html.DisplayFor(m => item.SideNo)
                        </td>
                        <td scope="col">
                            @Html.DisplayFor(m => item.Manufacturer)
                        </td>
                        <td scope="col">
                            @Html.DisplayFor(m => item.Model)
                        </td>
                        <td scope="col">
                            @Html.DisplayFor(m => item.VehicleTypeName)
                        </td>
                        <td scope="col">
                            @Html.DisplayFor(m => item.IsCoupleableDescriptor)
                        </td>

                        <td>
                            <a href="@Url.Action("Edit", "Vehicle", new {@id = item.VehicleId})" class="btn btn-warning">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Vehicle", new {@id = item.VehicleId})" class="btn btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    }
    else
    {
        <h3 class="text-info text-center">Brak utworzonych pojazdów.</h3>
    }
</div>
