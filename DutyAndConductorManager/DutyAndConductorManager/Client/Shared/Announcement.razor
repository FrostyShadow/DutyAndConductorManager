
<div class="card @Type" style="margin-bottom: 15px;">
    <div class="card-header">
        @HeaderText
    </div>
    <div class="card-body">
        @BodyText
    </div>
</div>


@code {
    [Parameter]
    public string HeaderText { get; set; }
    [Parameter]
    public string BodyText { get; set; }
    [Parameter]
    public string Type { get; set; }
}
